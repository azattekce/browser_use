FROM ubuntu:22.04

# Temel paketler
RUN apt-get update && apt-get install -y \
    wget \
    curl \
    sudo \
    gnupg2 \
    software-properties-common \
    xvfb \
    x11vnc \
    fluxbox \
    net-tools \
    unzip \
    python3 python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Chrome yükleme
RUN wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list' \
    && apt-get update \
    && apt-get install -y google-chrome-stable \
    && rm -rf /var/lib/apt/lists/*

# Flask uygulaması için çalışma dizini
WORKDIR /app

# Python bağımlılıklarını kopyala ve yükle
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Uygulama dosyalarını kopyala
COPY . .

# Instance klasörünü oluştur
RUN mkdir -p /app/instance /app/logs && chmod 755 /app/instance /app/logs

# VNC şifresi yok, sadece test için
ENV DISPLAY=:0
ENV FLASK_APP=run.py
ENV PYTHONPATH=/app
EXPOSE 5005 5900 6080



# Başlatma scripti
COPY start-dnm.sh /start-dnm.sh
RUN chmod +x /start-dnm.sh

# Kullanıcı oluştur ve app klasörüne izin ver
RUN useradd -ms /bin/bash devuser && \
    chown -R devuser:devuser /app

USER devuser
WORKDIR /app




CMD ["/start-dnm.sh"]
